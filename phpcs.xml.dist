<?xml version="1.0"?>
<ruleset>
    <arg name="basepath" value="."/>

    <exclude-pattern>./node_modules</exclude-pattern>
    <exclude-pattern>./vendor</exclude-pattern>

    <file>./app</file>
    <file>./config</file>
    <file>./resources</file>
    <file>./routes</file>
    <file>./tests</file>

    <rule ref="./vendor/fossbarrow/laravel-phpcs/phpcs.xml">
        <exclude name="Generic.Files.LineLength"/>
    </rule>
</ruleset>
